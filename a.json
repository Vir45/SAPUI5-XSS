"routing": {
  "config": {
    "routerClass": "sap.m.routing.Router",
    "viewType": "XML",
    "async": true,
    "viewPath": "security.demo.securityDemo.view",
    "controlAggregation": "pages",
    "controlId": "app",
    "clearControlAggregation": false
  },
  "routes": [
    {
      "name": "RouteMainView",
      "pattern": ":?query:",
      "target": [
        "TargetMainView"
      ]
    }
  ],
  "targets": {
    "TargetMainView": {
      "viewType": "XML",
      "transition": "slide",
      "clearControlAggregation": false,
      "viewId": "MainView",
      "viewName": "MainView"
    }
  }
},